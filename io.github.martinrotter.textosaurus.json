{
    "app-id": "io.github.martinrotter.textosaurus",
    "rename-icon": "textosaurus",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.9",
    "sdk": "org.kde.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.gcc7"
    ],
    "command": "textosaurus",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=host"
    ],
    "build-options": {
        "env": {
            "CC": "/usr/lib/sdk/gcc7/bin/gcc",
            "CXX": "/usr/lib/sdk/gcc7/bin/g++"
        }
    },
    "modules": [
        {
            "config-opts": [
                "QMAKE_CXX=/usr/lib/sdk/gcc7/bin/g++",
                "CONFIG+=release",
                "CONFIG+=FLATPAK_MODE"
            ],
            "buildsystem": "qmake",
            "name": "textosaurus",
            "sources": [
                {
                    "branch": "2018.04.17",
                    "type": "git",
                    "commit": "1cd157614876c7901120817c034a3855a6887a24",
                    "url": "git://github.com/martinrotter/textosaurus.git"
                }
            ]
        }
    ]
}
